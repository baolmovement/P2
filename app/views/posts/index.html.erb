                        <div class="text-muted"><%= p1.created_at %></div>
                        <%# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> %>
                        <%= link_to "Continue Reading", post_path(p1) %>
                    </div>
                    <img class="card-img-right flex-auto d-none d-lg-block float-right" data-src="holder.js/200x250?theme=thumb" alt="Thumbnail [200x250]"
