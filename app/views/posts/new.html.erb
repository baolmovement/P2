
<h1 class="text-center">New Post</h1>

<div class=" row preview-height align-middle">
<div class="col-lg-12 text-center">
<%= form_for @post do |f| %>
  <%= f.text_field :title, placeholder: "Title" %>
  <br>
  <%= f.text_area :body, placeholder: "Your post..." %> 
  <br> 
  <%= f.text_area :genre, placeholder: "Genre" %>   
  <br>  
  <%= f.text_area :style, placeholder: "Style" %>   
  <br> 
  <%= f.select :platform, ['FILM', 'TELEVISION','BOOK']%> 
  <br> 
  <%= f.text_area :image, placeholder: "Image URL" %> 
  <br>
  <%= f.submit %>
<% end %>  
</div>
</div>