<div class="container-fluid text-center show-bg preview-height">  
    <h1 class="text-white website-font">Key Pitch</h1> 
    <h1><%= current_user.name%>'s Collection</h1> 
    <h2>Manage Posts:</h2>

<% current_user.posts.each do |p| %> 
    <div class="row text-center"> 
        <div class="col-sm-4 bg-warning"></div> 
        <div class="col-sm-8 bg-white"
            <p><%= link_to(p.title, post_path(p)) %>
            <%= link_to("Edit", edit_post_path(p)) %>
            <%= link_to("Delete", "/posts/#{p.id}", method: "delete")%></p> 
        </div> 
    </div>
<% end %>    
   

