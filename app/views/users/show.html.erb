<div class="container-fluid text-center show-bg preview-height">    

   <h2 class="text-white">Manage Account:</h2>
    <%= link_to("Edit", edit_user_path) %>
    <%= link_to "Delete Account", user_path(current_user.id), method: 'delete' %>
<%# ------------------------------------------------------------------------------- %>    
    <h2 class="text-white">Manage Posts:</h2>

    <% current_user.posts.each do |p| %> 
        <div class="row text-center border"> 
            <div class="col-sm-2 bg-white no-padding"><img src="<%=p.image%>" style="width: 300px; height: auto;"></div> 
            <div class="col-sm-10 bg-white h1"
                <p><%= link_to(p.title, post_path(p)) %><br>
                <%= link_to("Edit", edit_post_path(p)) %>
                <%= link_to("Delete", "/posts/#{p.id}", method: "delete")%></p> 
            </div> 
        </div>
    <% end %>   
<%# ------------------------------------------------------------------------------- %>  
</div>