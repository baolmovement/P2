<div class="container-fluid text-center show-bg preview-height pt-5">    
     <h2 class="text-white text-center">Manage Account:</h2>
     <div class="row text-center">  
        <div class="col-sm-12 mb-5">
            <%= link_to("Edit Account Info", edit_user_path, class:'btn btn-primary') %>
            <%= link_to "Delete Account", user_path(current_user.id), method: 'delete', class:'btn btn-danger' %>  
        </div>
    </div>
<%# ------------------------------------------------------------------------------- %>   
<% if current_user.posts.length == 0 %>  
    
    <div class="card">  
        <h1> About </h1> 
        <h2> <a class="w-font">Elevator Pitch</a> is a community </h2>
        <strong> Share stories with the community</strong> 
        <strong> Support stories you want realized in a book, a theatre, or a living room. </strong>
        <h1 class="btn btn-success mt-3"><%= link_to("Make first post!", new_post_path, class:'text-white')%></h1>
        <h1 class="btn btn-light"><%= link_to("or view posts", root_path, class:'text-dark')%></h1> 
    </div>
<% end %>

    <% current_user.posts.each do |p| %> 
        <div class="row text-center mb-3 show-height"> 
            <div class="col-sm-3"></div>
            <div class="col-sm-6 bg-white h1 no-padding show-height pt-5" 
                <p><%= link_to(p.title, post_path(p), class:'text-dark') %><br>
                <%= link_to("Edit", edit_post_path(p), class:'btn btn-primary') %>
                <%= link_to("Delete", "/posts/#{p.id}", class:'btn btn-danger', method: "delete")%></p> 
            </div>  
            <div class="col-sm-3"></div>
        </div>
    <% end %>   
<%# ------------------------------------------------------------------------------- %>  
</div>