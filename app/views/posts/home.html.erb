 <% @posts.each do |p| %>    
    <div class="container-fluid d-block">   
        <div class="row disp-margin text-white preview-height align-middle bg-img" style="background-image: url('<%= p.image.length > 0 ? p.image : default_bg_url %>');"> 
             <div class="col-lg-12 text-center">
                <p class="title"><a><%= p.title %></a></p>
                <h3><a>by <%= p.user.name %></a></h3>
                <a class="bordera m-padding"><%= p.style %></a> 
                <a class="bordera m-padding"><%= p.genre %></a> 
                <a class="bordera m-padding"><%= p.platform %></a>  
            </div>
        </div> 
        <div class="row b-padding bg-white">    
            <a class="col-lg-12 text-center"><%= p.body %></a> 
        </div>
    </div>
<% end %>
